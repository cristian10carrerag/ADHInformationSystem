
<div class="row">
    {{#each exams}}
            <div class="col-md-3">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title d-flex justify-content-between align-items-center">
                            {{name}} {{lastName}} 
                            <a href="/exams/edit/{{_id}}"> <button class="btn btn-success"> Tomar examen </button> </a>
                        </h4>
                        <p>{{identification}}</p>
                        <p>{{date_of_exam}}</p>
                        <p>{{hour_of_exam}}</p>
                        <form action="/exams/delete/{{_id}}?_method=DELETE " method="POST">
                            <input type="hidden" name="_method" value="DELETE">
                            <button class="btn btn-danger btn-block btn-sm" type="submit">Cancelar examen</button>
                        </form>
                    </div>
                </div>
            </div>
    {{/each}}
</div>